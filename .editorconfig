# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf

# Matches multiple files with brace expansion notation
# Set default charset
# 4 space indentation
[*.{js,jsx,html,yml,ts,tsx,css,scss}]
charset = utf-8
indent_style = space
indent_size = 4

[*.json]
charset = utf-8
indent_style = space
indent_size = 2
