{
  "extends": [
    "tslint:recommended",
    "tslint-jsdoc-rules",
    "tslint-eslint-rules",
    "tslint-config-airbnb",
    "tslint-config-prettier",
    "tslint-plugin-prettier",
    "tslint-no-circular-imports",
    "tslint-no-unused-expression-chai"
  ],
  "linterOptions": {
    "exclude": [
      "build",
      "config",
      "public",
      "node_modules",
      "scripts"
    ]
  },
  "rules": {
    "array-type": [
      true,
      "array"
    ],
    "import-name": [true, {
      "react": "React"
    }],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case"
    ],
    "no-duplicate-variable": true,
    "no-else-after-return": false,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "no-else-return": [
      "error",
      {
        "allowElseIf": true
      }
    ],
    "no-unused-variable": [
      true,
      {
        "ignore-pattern": "^_"
      }
    ],
    "import/extensions": [
      "error",
      "always",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "ter-indent": [
      true,
      4,
      {
        "MemberExpression": 0,
        "SwitchCase": 1
      }
    ],
    "object-literal-sort-keys": false,
    "no-debugger": true,
    "no-console": true,
    "max-file-line-count": [
      true,
      500
    ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ],
    "no-trailing-whitespace": true,
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 1
      }
    ],
    "prettier": [
      false,
      {
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 4,
        "useTabs": false,
        "bracketSpacing": true,
        "semi": true
      }
    ],
    "jsdoc-format": [
      true,
      "check-multiline-start"
    ],
    "compat/compat": ["error", "defaults, not ie < 11"]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules",
    "node_modules/eslint-plugin-compat/lib/rules"
  ]
}
